<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/vungle_logo"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/btnWrapper"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:layout_gravity="center_horizontal">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/placement_view1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#caeeff"
            android:scaleType="fitCenter">
            <TextView
                android:id="@+id/placement_id1"
                android:gravity="left|top"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="placement ID 1"/>
            <Button
                android:id="@+id/placement_load1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/placement_id1"
                android:layout_gravity="left|bottom"
                android:layout_marginTop="20dp"
                android:text="load" />
            <Button
                android:id="@+id/placement_play1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/placement_load1"
                android:layout_toRightOf="@id/placement_load1"
                android:layout_toEndOf="@id/placement_load1"
                android:text="play" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/placement_view2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:background="#95dcfd"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" >
            <TextView
                android:id="@+id/placement_id2"
                android:gravity="left|top"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="placement ID 2"/>
            <Button
                android:id="@+id/placement_load2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/placement_id2"
                android:layout_gravity="left|bottom"
                android:layout_marginTop="20dp"
                android:text="load" />
            <Button
                android:id="@+id/placement_play2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/placement_load2"
                android:layout_toRightOf="@id/placement_load2"
                android:layout_toEndOf="@id/placement_load2"
                android:text="play" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/placement_view3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:background="#1d8fc4"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" >
            <TextView
                android:id="@+id/placement_id3"
                android:gravity="left|top"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="placement ID 3"/>
            <Button
                android:id="@+id/placement_load3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/placement_id3"
                android:layout_gravity="left|bottom"
                android:layout_marginTop="20dp"
                android:text="load" />
            <Button
                android:id="@+id/placement_play3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/placement_load3"
                android:layout_toRightOf="@id/placement_load3"
                android:layout_toEndOf="@id/placement_load3"
                android:text="play" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>