<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/topMenuWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/vungle_logo"
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:layout_weight="0.36"
            android:scaleType="fitStart"
            android:src="@drawable/vungle_logo" />

        <TextView
            android:id="@+id/vungle_app_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="App ID:" />

        <Button
            android:id="@+id/init_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/vungle_app_id"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Init SDK" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:orientation="vertical">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/placement_view1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#caeeff"
            android:scaleType="fitCenter"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/placement_id1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="placement ID 1"
                android:textAlignment="center" />

            <Button
                android:id="@+id/placement_load1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Load"
                android:visibility="gone" />

            <Button
                android:id="@+id/placement_play1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="play" />

        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/placement_view2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#95dcfd"
            android:scaleType="fitCenter">

            <TextView
                android:id="@+id/placement_id2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left|top"
                android:text="placement ID 2" />

            <Button
                android:id="@+id/placement_load2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/placement_id2"
                android:layout_gravity="left|bottom"
                android:layout_marginTop="20dp"
                android:text="load" />

            <Button
                android:id="@+id/placement_play2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/placement_load2"
                android:layout_toEndOf="@id/placement_load2"
                android:layout_toRightOf="@id/placement_load2"
                android:text="play" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/placement_view3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#1d8fc4"
            android:scaleType="fitCenter">

            <TextView
                android:id="@+id/placement_id3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left|top"
                android:text="placement ID 3" />

            <Button
                android:id="@+id/placement_load3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/placement_id3"
                android:layout_gravity="left|bottom"
                android:layout_marginTop="20dp"
                android:text="load" />

            <Button
                android:id="@+id/placement_play3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/placement_load3"
                android:layout_toEndOf="@id/placement_load3"
                android:layout_toRightOf="@id/placement_load3"
                android:text="play" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>