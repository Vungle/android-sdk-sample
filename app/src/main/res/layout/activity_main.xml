<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/topMenuWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/vungle_logo"
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:layout_weight="0.14"
            android:scaleType="fitCenter"
            android:src="@drawable/vungle_logo" />

        <TextView
            android:id="@+id/vungle_app_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="App ID:" />

        <Button
            android:id="@+id/init_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/vungle_app_id"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_green_button"
            android:textColor="@color/buttonText"
            android:text="Init SDK" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:orientation="vertical">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/placement_view1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/placement_id1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="placement ID 1"
                android:textAlignment="center" />

            <Button
                android:id="@+id/placement_load1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Load"
                android:visibility="gone" />

            <Button
                android:id="@+id/placement_play1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_blue_button"
                android:gravity="center"
                android:text="play"
                android:textColor="@color/buttonText" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/placement_view2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter">

            <TextView
                android:id="@+id/placement_id2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="placement ID 2" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/placement_id2"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:scaleType="fitCenter">

                <Button
                    android:id="@+id/placement_load2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_blue_button"
                    android:text="load"
                    android:layout_weight="1.0"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/buttonText" />

                <Button
                    android:id="@+id/placement_play2"
                    android:layout_width="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_blue_button"
                    android:text="play"
                    android:layout_weight="1.0"
                    android:textColor="@color/buttonText" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/placement_view3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter">

            <TextView
                android:id="@+id/placement_id3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="placement ID 3" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/placement_id3"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:scaleType="fitCenter">

                <Button
                    android:id="@+id/placement_load3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_blue_button"
                    android:textColor="@color/buttonText"
                    android:layout_weight="1.0"
                    android:layout_marginRight="10dp"
                    android:text="load" />

                <Button
                    android:id="@+id/placement_play3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_blue_button"
                    android:textColor="@color/buttonText"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="10dp"
                    android:text="play" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>